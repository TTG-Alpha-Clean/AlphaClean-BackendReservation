{
  "name": "alpha-clean-backend",
  "version": "1.0.0",
  "description": "Backend do sistema Alpha Clean",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only app.ts",
    "test": "jest",
    "migrate": "npx knex migrate:latest",
    "seed": "npx knex seed:run",
    "debug:login": "ts-node scripts/debugLogin.ts login",
    "debug:users": "ts-node scripts/debugLogin.ts users",
    "create:admin": "ts-node scripts/createAdmin.ts admin",
    "create:user": "ts-node scripts/createAdmin.ts user",
    "check:role": "ts-node scripts/checkRole.ts check",
    "make:admin": "ts-node scripts/checkRole.ts make-admin",
    "list:users": "ts-node scripts/checkRole.ts list",
    "check:enum": "ts-node scripts/checkRole.ts enum"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/cookie-parser": "^1.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "api",
    "backend",
    "typescript",
    "express",
    "postgres"
  ],
  "author": "Alpha Clean Team",
  "license": "MIT"
}
